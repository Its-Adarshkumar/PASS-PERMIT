<% layout('layouts/boilerplate') %>

<!-- Contact Section -->
<main class="container py-4">
  <h2 class="text-center mb-4 fw-semibold text-primary">Contact Us</h2>

  <div class="row g-4">
    <!-- Address Card -->
    <div class="col-12 col-md-4">
      <div class="card h-100 shadow-sm border-0 text-center">
        <div class="card-body py-4">
          <div class="mb-2 fs-2 text-primary">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <h6 class="card-title fw-bold">Regional Headquarters</h6>
          <p class="card-text small text-muted mb-0">
            Airports Authority of India,<br>
            NATS Complex (near IGI Airport, Terminal-2),<br>
            New Delhi, India
          </p>
        </div>
      </div>
    </div>

    <!-- Phone Card -->
    <div class="col-12 col-md-4">
      <div class="card h-100 shadow-sm border-0 text-center">
        <div class="card-body py-4">
          <div class="mb-2 fs-2 text-success">
            <i class="fas fa-phone-alt"></i>
          </div>
          <h6 class="card-title fw-bold">Phone</h6>
          <p class="card-text small text-muted mb-0">+91-11-24632950</p>
        </div>
      </div>
    </div>

    <!-- Email Card -->
    <div class="col-12 col-md-4">
      <div class="card h-100 shadow-sm border-0 text-center">
        <div class="card-body py-4">
          <div class="mb-2 fs-2 text-danger">
            <i class="fas fa-envelope"></i>
          </div>
          <h6 class="card-title fw-bold">Email</h6>
          <p class="card-text small text-muted mb-0">
            <a href="mailto:support.passpermit@aai.aero" class="text-decoration-none text-primary">
              support.passpermit@aai.aero
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</main>

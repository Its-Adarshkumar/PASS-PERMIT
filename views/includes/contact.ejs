<% layout('layouts/boilerplate') %>

<!-- Contact Section -->
<main class="container contact-main py-4">
  <div class="space"><br></div>
  
  <!-- Contact Heading -->
  <h1 class="text-center section-heading">Contact Us</h1>
  <p class="text-center section-subtext">
    Get in touch with our team for any assistance or inquiries
  </p>
  <div class="heading-line"></div>

  <div class="row g-4 mb-5">
    <!-- Address Card -->
    <div class="col-12 col-md-4">
      <div class="card h-100 text-center">
        <div class="card-body py-5 px-4">
          <div class="mb-3 fs-1 text-primary">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <h5 class="card-title fw-bold mb-3">Regional Headquarters</h5>
          <p class="card-text text-muted mb-0">
            Airports Authority of India,<br>
            NATS Complex (near IGI Airport, Terminal-2),<br>
            New Delhi, India
          </p>
        </div>
      </div>
    </div>

    <!-- Phone Card -->
    <div class="col-12 col-md-4">
      <div class="card h-100 text-center">
        <div class="card-body py-5 px-4">
          <div class="mb-3 fs-1 text-success">
            <i class="fas fa-phone-alt"></i>
          </div>
          <h5 class="card-title fw-bold mb-3">Phone</h5>
          <p class="card-text text-muted mb-0">+91-11-24632950</p>
        </div>
      </div>
    </div>

    <!-- Email Card -->
    <div class="col-12 col-md-4">
      <div class="card h-100 text-center">
        <div class="card-body py-5 px-4">
          <div class="mb-3 fs-1 text-danger">
            <i class="fas fa-envelope"></i>
          </div>
          <h5 class="card-title fw-bold mb-3">Email</h5>
          <p class="card-text text-muted mb-0">
            <a href="mailto:support.passpermit@aai.aero" class="text-decoration-none text-primary">
              support.passpermit@aai.aero
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Developed By Section -->
<h1 class="text-center section-heading">Developed By</h1>
<p class="text-center section-subtext">Meet the talented team behind this project</p>
<div class="heading-line"></div>

<div class="row g-4 justify-content-center">
  <% developers.forEach(dev => { %>
    <div class="col-6 col-md-4 col-lg-2 developer-card">
      <div class="card h-100 text-center p-4">
        <img src="<%= dev.img %>" alt="<%= dev.name %>" class="profile-photo mx-auto mb-3">
        <h5 class="fw-bold mb-3"><%= dev.name %></h5>
        <div class="d-flex justify-content-center gap-3">
          <a href="<%= dev.linkedin %>" target="_blank" class="social-media-icon fs-3 text-primary">
            <i class="fab fa-linkedin"></i>
          </a>
          <a href="<%= dev.github %>" target="_blank" class="social-media-icon fs-3">
            <i class="fab fa-github"></i>
          </a>
        </div>
      </div>
    </div>
  <% }) %>
</div>
</main>
